<% layout('layouts/boilerplate') %> 
<div class="flex flex-col text-center w-full mb-20">
  <h2 class="text-xs  tracking-widest font-medium title-font mb-1" style="color: #3F3047;">Let's make a difference</h2>
  <h1 class="sm:text-3xl text-2xl font-medium title-font" style="color: #35bdb6;">All Posts</h1>
</div>


<section class="text-gray-600 body-font">
  <div class="container px-4 py-24 mx-auto">
    <div class="flex flex-wrap -m-4">

<% for(let post of posts){ %>
          
            <div class="p-4 md:w-1/3">
          
              <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
                
                <div class="flex items-center mb-3">
                  <div class="w-8 h-8 mr-3 inline-flex items-center justify-center rounded-full  text-white flex-shrink-0" style="background-color: #64B6AC;">
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                      <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                    </svg>
                  </div>
                  <h2 class="text-gray-900 text-lg title-font font-medium"><%= post.author%></h2>
                </div>
                
                <div class="flex-grow">
                  <p class="truncate leading-relaxed text-base"><%=post.description%> .</p>
                  <a class="mt-3 text-purple-500 inline-flex items-center" href="/posts/<%=post._id%>">Show more
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                      <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
            
          
          
<% } %>
</div> 
</div>
</section>





