<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
    

    <form action="/posts/<%=post._id%>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
            
            <label for="author" class="form-label">Author's name</label>
            <input class="form-control" type="text" id="author" placeholder="Author name" name="author" value="<%=post.author%>"  required>
            <div class="valid-feedback">Looks good!</div>
        
        </div>
        <div class="mb-3">
            
                <label class="form-label" for="state" >Select State</label>
                <select class="form-select" name="state" id="state"  required>
                <option ><%=post.state%></option>
                <% for(let state of states){ %>
                    <option value="<%=state%>" ><%=state%></option>
                <% } %> 
                </select> 
  
        </div>

        <div class="mb-3">

        
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="descripton" cols="20" rows="5" required><%=post.description%></textarea>
             <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success">Edit</button>
    </form>

</div>
</div>
